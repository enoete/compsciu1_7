    <script>
        // Universal Number Converter
        function convertNumber() {
            const input = document.getElementById('convertInput').value.trim();
            const sourceBase = parseInt(document.getElementById('sourceBase').value);
            const targetBase = parseInt(document.getElementById('targetBase').value);
            const resultDiv = document.getElementById('conversionResult');

            if (!input) {
                resultDiv.innerHTML = '<div class="result-box" style="border-left-color: #e74c3c;"><h5 style="color: #e74c3c;">Error</h5><p>Please enter a number to convert.</p></div>';
                return;
            }

            try {
                // Convert input to decimal first
                const decimalValue = parseInt(input, sourceBase);
                
                if (isNaN(decimalValue)) {
                    throw new Error('Invalid number for the selected base');
                }

                // Convert decimal to target base
                const result = decimalValue.toString(targetBase).toUpperCase();

                // Generate step-by-step explanation
                let explanation = '<div class="result-box"><h5>Conversion Result</h5>';
                explanation += `<p><strong>Input:</strong> ${input} (Base ${sourceBase})</p>`;
                explanation += `<p><strong>Decimal Value:</strong> ${decimalValue}</p>`;
                explanation += `<p><strong>Result:</strong> ${result} (Base ${targetBase})</p>`;
                
                if (sourceBase !== 10) {
                    explanation += '<p><strong>Step 1:</strong> Convert to decimal (base 10)</p>';
                    explanation += `<p style="margin-left: 20px;">${input}<sub>${sourceBase}</sub> = ${decimalValue}<sub>10</sub></p>`;
                }
                
                if (targetBase !== 10) {
                    explanation += `<p><strong>Step 2:</strong> Convert decimal to base ${targetBase}</p>`;
                    explanation += `<p style="margin-left: 20px;">${decimalValue}<sub>10</sub> = ${result}<sub>${targetBase}</sub></p>`;
                }
                
                explanation += '</div>';
                resultDiv.innerHTML = explanation;
            } catch (error) {
                resultDiv.innerHTML = `<div class="result-box" style="border-left-color: #e74c3c;"><h5 style="color: #e74c3c;">Error</h5><p>${error.message}</p></div>`;
            }
        }

        // Fraction Converter
        function convertFraction() {
            const input = parseFloat(document.getElementById('fractionInput').value);
            const resultDiv = document.getElementById('fractionResult');

            if (isNaN(input) || input <= 0 || input >= 1) {
                resultDiv.innerHTML = '<div class="result-box" style="border-left-color: #e74c3c;"><h5 style="color: #e74c3c;">Error</h5><p>Please enter a decimal fraction between 0 and 1 (e.g., 0.625)</p></div>';
                return;
            }

            let fraction = input;
            let binary = '0.';
            let steps = '<div class="result-box"><h5>Conversion Steps</h5>';
            let iterations = 0;
            const maxIterations = 20;

            while (fraction > 0 && iterations < maxIterations) {
                fraction *= 2;
                if (fraction >= 1) {
                    binary += '1';
                    steps += `<p>${(fraction - 1).toFixed(5)} √ó 2 = ${fraction.toFixed(5)} ‚Üí <strong>1</strong></p>`;
                    fraction -= 1;
                } else {
                    binary += '0';
                    steps += `<p>${fraction.toFixed(5)} √ó 2 = ${fraction.toFixed(5)} ‚Üí <strong>0</strong></p>`;
                }
                iterations++;
            }

            steps += `<p style="margin-top: 15px;"><strong>Result:</strong> ${input} = ${binary}<sub>2</sub></p>`;
            steps += '</div>';
            resultDiv.innerHTML = steps;
        }

        // Binary Addition Calculator
        function addBinary() {
            const num1 = document.getElementById('binaryNum1').value.trim();
            const num2 = document.getElementById('binaryNum2').value.trim();
            const resultDiv = document.getElementById('binaryAddResult');

            if (!num1 || !num2) {
                resultDiv.innerHTML = '<div class="result-box" style="border-left-color: #e74c3c;"><h5 style="color: #e74c3c;">Error</h5><p>Please enter both binary numbers.</p></div>';
                return;
            }

            if (!/^[01]+$/.test(num1) || !/^[01]+$/.test(num2)) {
                resultDiv.innerHTML = '<div class="result-box" style="border-left-color: #e74c3c;"><h5 style="color: #e74c3c;">Error</h5><p>Please enter valid binary numbers (only 0s and 1s).</p></div>';
                return;
            }

            const decimal1 = parseInt(num1, 2);
            const decimal2 = parseInt(num2, 2);
            const sum = decimal1 + decimal2;
            const binarySum = sum.toString(2);

            let result = '<div class="result-box"><h5>Binary Addition Result</h5>';
            result += '<div class="bit-display">';
            result += `  ${num1.padStart(Math.max(num1.length, num2.length), ' ')}<br>`;
            result += `+ ${num2.padStart(Math.max(num1.length, num2.length), ' ')}<br>`;
            result += `${''.padStart(Math.max(num1.length, num2.length) + 2, '-')}<br>`;
            result += `  ${binarySum}`;
            result += '</div>';
            result += `<p><strong>Verification:</strong> ${decimal1} + ${decimal2} = ${sum}</p>`;
            result += '</div>';
            resultDiv.innerHTML = result;
        }

        // Two's Complement Calculator
        function calculateTwosComplement() {
            const input = parseInt(document.getElementById('twosCompInput').value);
            const resultDiv = document.getElementById('twosCompResult');

            if (isNaN(input) || input < 1 || input > 127) {
                resultDiv.innerHTML = '<div class="result-box" style="border-left-color: #e74c3c;"><h5 style="color: #e74c3c;">Error</h5><p>Please enter a positive number between 1 and 127.</p></div>';
                return;
            }

            // Convert to 8-bit binary
            const binary = input.toString(2).padStart(8, '0');
            
            // One's complement (flip bits)
            let onesComp = '';
            for (let bit of binary) {
                onesComp += bit === '0' ? '1' : '0';
            }
            
            // Two's complement (add 1)
            let twosComp = (parseInt(onesComp, 2) + 1).toString(2).padStart(8, '0');

            let result = '<div class="result-box"><h5>Two\'s Complement Calculation</h5>';
            result += `<p><strong>Original Number:</strong> +${input}</p>`;
            result += '<div class="bit-display">';
            result += `Step 1: Binary representation<br>+${input} = ${binary}<br><br>`;
            result += `Step 2: One's complement (flip bits)<br>${onesComp}<br><br>`;
            result += `Step 3: Add 1<br>+ 00000001<br>---------<br>${twosComp}`;
            result += '</div>';
            result += `<p><strong>Result:</strong> -${input} in two's complement = ${twosComp}</p>`;
            result += '</div>';
            resultDiv.innerHTML = result;
        }

        // Parity Calculator
        function calculateParity() {
            const input = document.getElementById('parityInput').value.trim();
            const parityType = document.getElementById('parityType').value;
            const resultDiv = document.getElementById('parityResult');

            if (!input || !/^[01]{7}$/.test(input)) {
                resultDiv.innerHTML = '<div class="result-box" style="border-left-color: #e74c3c;"><h5 style="color: #e74c3c;">Error</h5><p>Please enter exactly 7 binary digits (0s and 1s).</p></div>';
                return;
            }

            // Count 1s
            const onesCount = (input.match(/1/g) || []).length;
            const isEven = onesCount % 2 === 0;
            
            let parityBit;
            if (parityType === 'even') {
                parityBit = isEven ? '0' : '1';
            } else {
                parityBit = isEven ? '1' : '0';
            }

            const result8bit = input + parityBit;

            let result = '<div class="result-box"><h5>Parity Bit Calculation</h5>';
            result += `<p><strong>Input Data:</strong> ${input}</p>`;
            result += `<p><strong>Count of 1's:</strong> ${onesCount} (${isEven ? 'even' : 'odd'})</p>`;
            result += `<p><strong>Parity Type:</strong> ${parityType.charAt(0).toUpperCase() + parityType.slice(1)}</p>`;
            result += `<p><strong>Parity Bit:</strong> ${parityBit}</p>`;
            result += '<div class="bit-display">';
            result += `${result8bit}<br>`;
            result += `(Data: ${input}, Parity: ${parityBit})`;
            result += '</div>';
            result += `<p><strong>Total 1's:</strong> ${onesCount + parseInt(parityBit)} (${(onesCount + parseInt(parityBit)) % 2 === 0 ? 'even' : 'odd'})</p>`;
            result += '</div>';
            resultDiv.innerHTML = result;
        }

        // Floating-Point Visualizer
        function visualizeFloat() {
            const input = parseFloat(document.getElementById('floatInput').value);
            const resultDiv = document.getElementById('floatResult');

            if (isNaN(input)) {
                resultDiv.innerHTML = '<div class="result-box" style="border-left-color: #e74c3c;"><h5 style="color: #e74c3c;">Error</h5><p>Please enter a valid decimal number.</p></div>';
                return;
            }

            if (input === 0) {
                resultDiv.innerHTML = '<div class="result-box"><h5>Special Case: Zero</h5><p>Zero is represented as all bits set to 0.</p><div class="bit-display"><span class="sign-bit">0</span> <span class="exponent-bits">00000000</span> <span class="mantissa-bits">00000000000000000000000</span></div></div>';
                return;
            }

            // Determine sign
            const sign = input < 0 ? 1 : 0;
            const absValue = Math.abs(input);

            // Convert to binary (simplified visualization)
            const buffer = new ArrayBuffer(4);
            const view = new DataView(buffer);
            view.setFloat32(0, input);
            const bits = view.getUint32(0);

            const signBit = (bits >> 31) & 1;
            const exponentBits = (bits >> 23) & 0xFF;
            const mantissaBits = bits & 0x7FFFFF;

            const signStr = signBit.toString();
            const exponentStr = exponentBits.toString(2).padStart(8, '0');
            const mantissaStr = mantissaBits.toString(2).padStart(23, '0');

            // Calculate actual exponent
            const actualExponent = exponentBits - 127;

            let result = '<div class="result-box"><h5>IEEE 754 32-bit Representation</h5>';
            result += `<p><strong>Decimal Number:</strong> ${input}</p>`;
            result += '<p><strong>32-bit Breakdown:</strong></p>';
            result += '<div class="bit-display">';
            result += `<span class="sign-bit">${signStr}</span> `;
            result += `<span class="exponent-bits">${exponentStr}</span> `;
            result += `<span class="mantissa-bits">${mantissaStr}</span>`;
            result += '</div>';
            result += '<table style="margin-top: 15px;">';
            result += '<tr><th>Component</th><th>Value</th><th>Meaning</th></tr>';
            result += `<tr><td>Sign</td><td>${signStr}</td><td>${sign === 0 ? 'Positive (+)' : 'Negative (-)'}</td></tr>`;
            result += `<tr><td>Exponent</td><td>${exponentStr} (${exponentBits})</td><td>Actual exponent: ${exponentBits} - 127 = ${actualExponent}</td></tr>`;
            result += `<tr><td>Mantissa</td><td>${mantissaStr}</td><td>Fractional part (implicit 1.${mantissaStr})</td></tr>`;
            result += '</table>';
            result += `<p style="margin-top: 15px;"><strong>Formula:</strong> (-1)<sup>${signBit}</sup> √ó 1.${mantissaStr.substring(0, 10)}... √ó 2<sup>${actualExponent}</sup></p>`;
            result += '</div>';
            resultDiv.innerHTML = result;
        }

        // Binary Fraction Calculator
        function calculateBinaryFraction() {
            const input = document.getElementById('binaryFraction').value.trim();
            const resultDiv = document.getElementById('binaryFractionResult');

            if (!input || !/^[01]+$/.test(input)) {
                resultDiv.innerHTML = '<div class="result-box" style="border-left-color: #e74c3c;"><h5 style="color: #e74c3c;">Error</h5><p>Please enter a valid binary fraction (only 0s and 1s).</p></div>';
                return;
            }

            let decimalValue = 0;
            let calculation = '<div class="result-box"><h5>Binary Fraction Calculation</h5>';
            calculation += `<p><strong>Binary Fraction:</strong> 0.${input}</p>`;
            calculation += '<p><strong>Calculation:</strong></p>';
            calculation += '<table><tr><th>Position</th><th>Bit</th><th>Power of 2</th><th>Value</th></tr>';

            for (let i = 0; i < input.length; i++) {
                const bit = parseInt(input[i]);
                const power = -(i + 1);
                const value = bit * Math.pow(2, power);
                decimalValue += value;
                
                calculation += `<tr><td>${i + 1}</td><td>${bit}</td><td>2<sup>${power}</sup> = 1/${Math.pow(2, i + 1)}</td><td>${bit} √ó ${(1 / Math.pow(2, i + 1)).toFixed(6)} = ${value.toFixed(6)}</td></tr>`;
            }

            calculation += '</table>';
            calculation += `<p style="margin-top: 15px;"><strong>Result:</strong> 0.${input}<sub>2</sub> = ${decimalValue}</p>`;
            calculation += '</div>';
            resultDiv.innerHTML = calculation;
        }

        // Character Encoder
        function encodeCharacter() {
            const input = document.getElementById('charInput').value;
            const resultDiv = document.getElementById('charResult');

            if (!input || input.length !== 1) {
                resultDiv.innerHTML = '<div class="result-box" style="border-left-color: #e74c3c;"><h5 style="color: #e74c3c;">Error</h5><p>Please enter exactly one character.</p></div>';
                return;
            }

            const charCode = input.charCodeAt(0);
            const binary = charCode.toString(2).padStart(8, '0');
            const hex = charCode.toString(16).toUpperCase();

            let result = '<div class="result-box"><h5>Character Encoding</h5>';
            result += `<p><strong>Character:</strong> "${input}"</p>`;
            result += `<p><strong>ASCII/Unicode Value:</strong> ${charCode}</p>`;
            result += `<p><strong>Binary (8-bit):</strong> ${binary}</p>`;
            result += `<p><strong>Hexadecimal:</strong> 0x${hex}</p>`;
            
            if (charCode >= 65 && charCode <= 90) {
                result += `<p><strong>Note:</strong> This is an uppercase letter. Lowercase equivalent: "${String.fromCharCode(charCode + 32)}" (ASCII ${charCode + 32})</p>`;
            } else if (charCode >= 97 && charCode <= 122) {
                result += `<p><strong>Note:</strong> This is a lowercase letter. Uppercase equivalent: "${String.fromCharCode(charCode - 32)}" (ASCII ${charCode - 32})</p>`;
            }
            
            result += '</div>';
            resultDiv.innerHTML = result;
        }

        // Quiz Grading
        function gradeQuiz() {
            const answers = {
                q1: 'b', q2: 'a', q3: 'b', q4: 'c', q5: 'b',
                q6: 'b', q7: 'c', q8: 'b', q9: 'c', q10: 'b',
                q11: 'b', q12: 'c', q13: 'b', q14: 'b', q15: 'b',
                q16: 'b', q17: 'b', q18: 'b', q19: 'b', q20: 'b',
                q21: 'b', q22: 'b', q23: 'b', q24: 'd', q25: 'b',
                q26: 'b', q27: 'b', q28: 'b', q29: 'b', q30: 'b'
            };

            let score = 0;
            let totalQuestions = Object.keys(answers).length;

            for (let question in answers) {
                const selected = document.querySelector(`input[name="${question}"]:checked`);
                if (selected && selected.value === answers[question]) {
                    score++;
                }
            }

            const percentage = (score / totalQuestions * 100).toFixed(1);
            const resultsDiv = document.getElementById('quiz-results');
            const scoreDisplay = document.getElementById('score-display');
            const feedbackMessage = document.getElementById('feedback-message');

            scoreDisplay.textContent = `Your Score: ${score} / ${totalQuestions} (${percentage}%)`;

            if (percentage >= 90) {
                feedbackMessage.textContent = 'üåü Outstanding! You have mastered data representation!';
            } else if (percentage >= 80) {
                feedbackMessage.textContent = 'üéâ Excellent work! You have a strong understanding of the concepts!';
            } else if (percentage >= 70) {
                feedbackMessage.textContent = 'üëç Good job! Review the topics you missed to strengthen your knowledge.';
            } else if (percentage >= 60) {
                feedbackMessage.textContent = 'üìö Not bad! Spend more time reviewing the material, especially floating-point representation.';
            } else {
                feedbackMessage.textContent = 'üí™ Keep studying! Review all sections carefully and try the interactive tools again.';
            }

            resultsDiv.style.display = 'block';
            resultsDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        // Add Enter key support for inputs
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('convertInput')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') convertNumber();
            });
            document.getElementById('fractionInput')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') convertFraction();
            });
            document.getElementById('binaryNum1')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') addBinary();
            });
            document.getElementById('binaryNum2')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') addBinary();
            });
            document.getElementById('twosCompInput')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') calculateTwosComplement();
            });
            document.getElementById('parityInput')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') calculateParity();
            });
            document.getElementById('floatInput')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') visualizeFloat();
            });
            document.getElementById('binaryFraction')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') calculateBinaryFraction();
            });
            document.getElementById('charInput')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') encodeCharacter();
            });
        });
    </script>
